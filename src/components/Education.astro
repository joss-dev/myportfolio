---
const education = [
  {
    institution: "Universidad Nacional del Nordeste",
    degree: "Licenciatura en Sistemas de Información",
    year: "2021 - Presente",
  },
  {
    institution: "Curso Full Stack - Devligths",
    degree: "Bootcamp React y Node.js",
    year: "2024",
  },
];
---

<section id="education" class="py-20 text-white bg-gray-800 text-center">
  <h2 class="text-3xl font-extrabold mb-10 text-transparent bg-clip-text bg-gradient-to-r from-pink-400 to-purple-500">
    Educación
  </h2>

  <div class="space-y-6 max-w-2xl mx-auto text-left">
    {education.map(({ institution, degree, year }) => (
      <div class="p-6 rounded-lg bg-white/5 backdrop-blur-sm border border-white/10 shadow-md">
        <h3 class="text-xl font-bold text-white">{degree}</h3>
        <p class="text-sm text-gray-300">{institution}</p>
        <p class="text-xs text-gray-400">{year}</p>
      </div>
    ))}
  </div>
</section>
