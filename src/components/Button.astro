---
const {
  text,
  link = "#",
  gradient = "from-blue-600 to-cyan-400",
  hover = "hover:from-cyan-400 hover:to-blue-600",
  textColor = "text-white"
} = Astro.props;
---

<a href={link} class={`inline-block px-6 py-2 rounded-full font-semibold transition bg-gradient-to-r ${gradient} ${hover} ${textColor}`}>
  {text}
</a>
