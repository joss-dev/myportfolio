---
const skills = [
  { name: "HTML5", icon: "fab fa-html5", color: "text-orange-500" },
  { name: "CSS3", icon: "fab fa-css3-alt", color: "text-blue-500" },
  { name: "JavaScript", icon: "fab fa-js", color: "text-yellow-400" },
  { name: "Node.js", icon: "fab fa-node", color: "text-green-500" },
  { name: "React", icon: "fab fa-react", color: "text-cyan-400" },
  { name: "MongoDB", icon: "fas fa-database", color: "text-green-400" },
  { name: "Tailwind CSS", icon: "fas fa-wind", color: "text-sky-400" },
  { name: "Git", icon: "fab fa-git-alt", color: "text-red-500" },
];
---

<section id="skills" class="py-20 bg-gray-900 text-white text-center">
  <h2 class="text-3xl font-extrabold mb-10 text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-blue-500">
    Habilidades TÃ©cnicas
  </h2>

  <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-8 max-w-4xl mx-auto">
    {skills.map(({ name, icon, color }) => (
      <div class="motion-safe:animate-pulse md:hover:scale-105 md:hover:shadow-lg md:hover:shadow-cyan-500/30 flex flex-col items-center p-4 rounded-xl bg-white/5 hover:bg-white/10 transition-all duration-300 transform hover:scale-105 hover:shadow-lg hover:shadow-cyan-500/30">
        <i class={`${icon} text-5xl ${color} mb-2 transition-transform duration-300 group-hover:rotate-6`}></i>
        <span class="text-sm mt-1">{name}</span>
      </div>
    ))}
  </div>
</section>
