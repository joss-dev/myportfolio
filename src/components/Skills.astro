---
const skills = [
  { name: "TypeScript", logo: "/img/skills/typescript.svg" },
  { name: "JavaScript", logo: "/img/skills/javascript.svg" },
  { name: "Node.js", logo: "/img/skills/nodedotjs.svg" },
  { name: "NestJS", logo: "/img/skills/nestjs.svg" },
  { name: "React", logo: "/img/skills/react.svg" },
  { name: "Next.js", logo: "/img/skills/nextdotjs.svg" },
  { name: "Express.js", logo: "/img/skills/express.svg" },
  { name: "TypeORM", logo: "/img/skills/typeorm.svg" },
  { name: "PostgreSQL", logo: "/img/skills/postgresql.svg" },
  { name: "MongoDB", logo: "/img/skills/mongodb.svg" },
  { name: "Docker", logo: "/img/skills/docker.svg" },
  { name: "Git", logo: "/img/skills/git.svg" },
  { name: "Cursor", logo: "/img/skills/cursor.svg" },
  { name: "Claude", logo: "/img/skills/claude.svg" },
  { name: "MCP", logo: "/img/skills/mcp.svg" },
];
---

<section id="skills" class="py-20 text-white text-center">
  <h2 class="text-3xl font-extrabold mb-10 text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-blue-500">
    Habilidades TÃ©cnicas
  </h2>

  <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-8 max-w-5xl mx-auto">
    {skills.map(({ name, logo }) => (
      <div class="motion-safe:animate-pulse md:hover:scale-105 md:hover:shadow-lg md:hover:shadow-cyan-500/30 flex flex-col items-center p-4 rounded-xl bg-white/5 hover:bg-white/10 transition-all duration-300 transform hover:scale-105 hover:shadow-lg hover:shadow-cyan-500/30">
        <img
          src={logo}
          alt={`Logo de ${name}`}
          loading="lazy"
          class="w-12 h-12 object-contain mb-2"
        />
        <span class="text-sm mt-1">{name}</span>
      </div>
    ))}
  </div>
</section>
