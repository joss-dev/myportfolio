---
const {
  brand = "Joss.dev",
  textColor = "text-white",
  hoverColor = "hover:text-cyan-400",
  background = "bg-gray-900"
} = Astro.props;
---

<nav class={`${background} ${textColor} p-4 fixed w-full top-0 left-0 z-10 shadow-sm`} x-data="{ open: false }">
  <div class="container mx-auto flex justify-between items-center">
    <a href="" class="text-2xl font-bold">{brand}</a>

    <!-- Botón hamburguesa -->
    <button class="md:hidden focus:outline-none" @click="open = !open">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2"
           viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
        <path x-show="!open" d="M4 6h16M4 12h16M4 18h16" />
        <path x-show="open" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
    
    <ul
      class={`md:flex md:space-x-6 text-sm transition-all duration-300 ease-in-out absolute md:static top-full left-0 w-full md:w-auto bg-gray-900 md:bg-transparent flex-col md:flex-row ${hoverColor}`}
      :class="{ 'flex': open, 'hidden': !open }"
    >
      <li class="border-b md:border-0 px-4 py-2 md:py-0"><a href="#about" class="block transition">Sobre mí</a></li>
      <li class="border-b md:border-0 px-4 py-2 md:py-0"><a href="#projects" class="block transition">Proyectos</a></li>
      <li class="px-4 py-2 md:py-0"><a href="#contact" class="block transition">Contacto</a></li>
    </ul>
  </div>
</nav>
