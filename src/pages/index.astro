---
import MainLayout from '../layouts/MainLayout.astro'
import ProjectCard from '../components/ProjectCard.astro'
import Button from '../components/Button.astro'
---

<MainLayout>
  <!-- Sección Sobre mí -->
  <section id="about" class="py-20 bg-gray-100">
    <div class="container mx-auto text-center">
      <h2 class="text-4xl font-semibold mb-4">Sobre mí</h2>
      <p class="text-lg text-gray-600">Soy un desarrollador apasionado por crear soluciones innovadoras...</p>
    </div>
  </section>

  <!-- Sección Proyectos -->
  <section id="projects" class="py-20">
    <div class="container mx-auto text-center">
      <h2 class="text-4xl font-semibold mb-8">Mis Proyectos</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Aquí agregas las tarjetas de proyectos -->
        <ProjectCard title="Proyecto 1" description="Descripción del proyecto" link="#" />
        <ProjectCard title="Proyecto 2" description="Descripción del proyecto" link="#" />
        <ProjectCard title="Proyecto 3" description="Descripción del proyecto" link="#" />
      </div>
    </div>
  </section>

  <!-- Sección Contacto -->
  <section id="contact" class="py-20 bg-gray-100">
    <div class="container mx-auto text-center">
      <h2 class="text-4xl font-semibold mb-4">Contacto</h2>
      <Button text="Contáctame" link="mailto:contacto@miportafolio.com" />
    </div>
  </section>
</MainLayout>
